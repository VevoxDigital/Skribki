  +
doctype html
html
  head
    title #{repository.title || 'Wiki'} &#183; #{config['wiki.name']}

    // vendor files
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
        rel='stylesheet'
        integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u'
        crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.1.1.min.js')

    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet')

    // custom header content
    link(rel='stylesheet' href='/styles/layout.scss')
    link(rel='stylesheet' href='/styles/theme/theme.scss')
    link(rel='stylesheet' href='/styles/theme/' + name + '.scss')
    block scripts
      script.
        $(function () {
          $(window).scroll(function () {
            $('.top-button').toggleClass('top-button-hidden', $(window).scrollTop() <= 10)
          })
          $(window).scroll()

          $('.top-button').click(function () {
            $('body,html').animate({ scrollTop: 0 }, 500)
            $('.top-button').blur()
          })
        })
  body
    a.top-button.top-button-hidden.fa.fa-chevron-up(href='javascript:')

    include layout/navbar.pug
    include layout/page-header.pug

    block header
      +header('Page', 'A non-descript page.')

    include layout/banner.pug

    block body
      p Hello world!

    include layout/footer.pug
